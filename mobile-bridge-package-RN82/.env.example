# MobileBridge Template - Environment Variables
# Copie este arquivo para .env e preencha com suas configurações

# ==============================================
# APP CONFIGURATION
# ==============================================
APP_NAME=MobileBridge
APP_VERSION=1.0.0
APP_ENV=development

# ==============================================
# WEBVIEW CONFIGURATION
# ==============================================
# URL padrão carregada no TurboWebView
# IMPORTANTE: A URL é configurada em App.tsx (linha 395: webAppUrl)
# Este valor pode ser usado como fallback ou para diferentes ambientes
WEBVIEW_DEFAULT_URL=https://example.com

# Habilitar JavaScript na WebView (true/false)
WEBVIEW_JAVASCRIPT_ENABLED=true

# Habilitar DOM Storage (true/false)
WEBVIEW_DOM_STORAGE_ENABLED=true

# ==============================================
# API CONFIGURATION
# ==============================================
# Base URL da sua API backend
API_BASE_URL=https://api.example.com
API_TIMEOUT=30000

# Chave de API (se necessário)
API_KEY=your_api_key_here

# ==============================================
# AUTHENTICATION
# ==============================================
# OAuth/Auth0 configurations
AUTH_CLIENT_ID=your_client_id
AUTH_DOMAIN=your_auth_domain.com
AUTH_CALLBACK_URL=mobilebridgeapp://callback

# ==============================================
# ANALYTICS
# ==============================================
# Google Analytics / Firebase
ANALYTICS_ENABLED=true
ANALYTICS_TRACKING_ID=UA-XXXXX-Y

# ==============================================
# PUSH NOTIFICATIONS
# ==============================================
# Firebase Cloud Messaging
FCM_SERVER_KEY=your_fcm_server_key
FCM_SENDER_ID=your_sender_id

# APNs (iOS)
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_team_id

# ==============================================
# STORAGE
# ==============================================
# Prefixo para AsyncStorage keys
STORAGE_PREFIX=@mobileBridge:

# Habilitar storage seguro (true/false)
SECURE_STORAGE_ENABLED=true

# ==============================================
# NETWORK
# ==============================================
# Timeout para requisições de rede (ms)
NETWORK_TIMEOUT=30000

# Retry attempts para requisições
NETWORK_RETRY_ATTEMPTS=3

# ==============================================
# FEATURE FLAGS
# ==============================================
# Habilitar funcionalidades específicas
FEATURE_CART_ENABLED=true
FEATURE_WISHLIST_ENABLED=true
FEATURE_OFFLINE_MODE=true
FEATURE_ANALYTICS=true
FEATURE_PUSH_NOTIFICATIONS=true

# ==============================================
# DEBUG / DEVELOPMENT
# ==============================================
# Habilitar logs de debug (true/false)
DEBUG_MODE=true

# Habilitar React DevTools
REACT_DEVTOOLS_ENABLED=true

# Habilitar Flipper (debug)
FLIPPER_ENABLED=true

# ==============================================
# SENTRY / ERROR TRACKING
# ==============================================
SENTRY_DSN=https://your_sentry_dsn
SENTRY_ENVIRONMENT=development
SENTRY_ENABLED=false

# ==============================================
# OUTROS
# ==============================================
# Versão mínima da API suportada
MIN_API_VERSION=1.0.0

# Forçar atualização do app (true/false)
FORCE_UPDATE=false
